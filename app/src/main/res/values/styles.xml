<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorSecondary">@color/colorAccent</item>
    <item name="colorOnSecondary">#fff</item>
    <item name="colorSecondaryVariant">#F57C00</item>
    <item name="colorError">#D32F2F</item>
    <item name="colorOnError">#FFFFFF</item>
    <item name="materialButtonStyle">@style/AppButton</item>
  </style>

  <style name="AppButton" parent="Widget.MaterialComponents.Button">
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="backgroundTint">#64B5F6</item>
    <item name="android:textColor">#fff</item>
  </style>

  <style name="SS" parent="Widget.MaterialComponents.Button.TextButton">

  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="item_list">
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="stand_by_text">
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_margin">2dp</item>
  </style>

  <style name="doc_text">
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_margin">2dp</item>
  </style>

  <style name="person_text">
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="person_text_header" parent="person_text">
    <item name="android:textColor">@color/darkBlack</item>
  </style>

  <style name="asistencia_text">
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:textSize">@dimen/asistencia_text_size</item>
  </style>



  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
