<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.Button">
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="colorButtonNormal">#64B5F6</item>
    <item name="android:textColor">#fff</item>
  </style>

  <style name="AppTheme.Button.Green">
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="colorButtonNormal">#4CAF50</item>
    <item name="android:textColor">#fff</item>
  </style>

  <style name="AppTheme.Button.Orange">
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="colorButtonNormal">#FF5722</item>
    <item name="android:textColor">#fff</item>
  </style>

  <style name="AppTheme.Button.Alert">
    <item name="android:textSize">17sp</item>
    <item name="colorButtonNormal">#E57373</item>
    <item name="android:textColor">#fff</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="item_list">
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="stand_by_text">
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_margin">2dp</item>
  </style>

  <style name="person_text">
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="person_text_header" parent="person_text">
    <item name="android:textColor">@color/darkBlack</item>
  </style>

  <style name="asistencia_text">
    <item name="android:textColor">@color/lightBlack</item>
    <item name="android:textSize">@dimen/asistencia_text_size</item>
  </style>



  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
